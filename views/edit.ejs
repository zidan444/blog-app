<!DOCTYPE html>
<html>
<head>
  <title>Edit Blog</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
 <%- include('partials/header') %>

<div class="container mt-5">
  <h1 class="mb-4 text-center">Edit Blog Post</h1>

  <form action="/<%= blog._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="p-4 rounded shadow" style="background:#1e1e1e;">
    <!-- Title -->
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="title" id="title" class="form-control" value="<%= blog.title %>" required>
    </div>

    <!-- Content -->
    <div class="mb-3">
      <label for="content" class="form-label">Content</label>
      <textarea name="content" id="content" rows="8" class="form-control" required><%= blog.content %></textarea>
    </div>

    <!-- Categories -->
    <div class="mb-3">
      <label for="categories" class="form-label">Categories</label>
      <input type="text" name="categories" id="categories" class="form-control" value="<%= blog.categories.join(", ") %>">
    </div>

    <!-- Image Upload -->
    <div class="mb-3">
      <label for="image" class="form-label">Upload Image</label>
      <input type="file" name="image" id="image" class="form-control" accept="image/*">
      <% if(blog.image){ %>
        <div class="mt-2">
          <img src="<%= blog.image %>" class="img-fluid rounded" style="max-width:200px;" alt="Current blog image">
        </div>
      <% } %>
    </div>

    <button type="submit" class="btn btn-warning w-100">Update</button>
  </form>
</div>

<%- include('partials/footer') %>
</body>
</html>
