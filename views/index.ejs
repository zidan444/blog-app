<%- include('partials/header') %>

<div class="container mt-5">
  <h1 class="mb-4 text-center">All Blogs</h1>

  <% if(blogs.length === 0){ %>
    <p class="text-center">No blogs yet. <a href="/new">Create one now!</a></p>
  <% } %>

  <div class="row">
    <% blogs.forEach(blog => { %>
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm h-100">
          <% if(blog.image){ %>
            <img src="<%= blog.image %>" class="card-img-top" alt="Blog image" style="height:250px; object-fit:cover;">
          <% } %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">
              <a href="/<%= blog._id %>" class="text-decoration-none text-light">
                <%= blog.title %>
              </a>
            </h5>
            <p class="card-text"><%= blog.content.substring(0, 120) %>...</p>
            <small class="text-white">Published: <%= blog.createdAt.toDateString() %></small>
            <a href="/<%= blog._id %>" class="btn btn-outline-light mt-3 align-self-start">Read More</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include('partials/footer') %>
