<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-5">
    <h1 class="mb-4 text-center">Login</h1>

    <form action="/login" method="POST" class="p-4 rounded shadow" style="background:#1e1e1e; max-width:400px; margin:auto;">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" required class="form-control" placeholder="Enter your email">
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" id="password" required class="form-control" placeholder="Enter your password">
      </div>

      <button type="submit" class="btn btn-success w-100">Login</button>
    </form>

    <p class="mt-3 text-center">
      Donâ€™t have an account? <a href="/signup">Sign Up</a>
    </p>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
